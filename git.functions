function _op_action() {
    local op=""
    case "${1:-}" in
    a) op="am"
        ;;
    c) op="cherry-pick"
        ;;
    m) op="merge"
        ;;
    r) op="rebase"
        ;;
    *) op=$(opst)
        ;;
    esac
    _git ${op:-none} $2 || return $?
    test -z "$op" || echo -e "\ngit ${op} $2: ${OK}\n"
}
export -f _op_action

function _git_core_editor_export() {
    unset -f vi vim
