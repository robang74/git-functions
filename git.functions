function bsw() {
    test -z "${1:-}" && return 1
    local cb="$(bcur)" ch=$(hcur) nb=""
          cb=${cb:-$BRNC_SWTC_CURR_BRNC}
    if [ "x$1" == "x-" -a -n "${2:-}" ]; then
        return 1
    else
        if [ "x$1" == "x-" ]; then
            nb="${BRNC_SWTC_PREV_BRNC:-$cb}"
            set --
        fi
    fi
    declare -i ret=0
    if _git switch "$@" ${nb}; then
        BRNC_SWTC_PREV_BRNC="${cb}"
        if [ -n "${nb}" -a "$(hcur)" != "${BRNC_SWTC_PREV_HASH}" ]; then
            co ${BRNC_SWTC_PREV_HASH} 2>&1 | head -n1
            ret=${PIPESTATUS}
        else
            nb=$(bcur)
        fi
        BRNC_SWTC_PREV_HASH="${ch}"
        BRNC_SWTC_CURR_BRNC="${nb}"
    else
        ret=1
    fi
    return $ret
}
export -f bsw

function bcur() {
    local text risp opts="--current --topo-order --no-color"
#   command git show-branch $opts "$@" | sed -ne "s,[ +]*\[HEAD.*\].*,," \
#       -e "s/[ +]*\* *\[\([^ ]*\)] .*/\\1/p" | head -n1 | egnc .
    text=$(command git show-branch $opts "$@")
    declare -i n=$(echo "$text" | egnc -n "^-" | head -n1 | cut -d: -f1)
    risp=$(echo "$text" | head -n$n | sed -ne "s,[ +]*\[HEAD.*\].*,," \
        -e "s/[ +]*\* *\[\([^ ]*\)] .*/\\1/p" | head -n1)
    test -n "$risp" && echo "$risp" && return 0
    echo "$text" | head -n$[n+2] | tail -n2 | sed -n \
        -e "s,[ +*\!]\[HEAD.*\].*,," -e "s/[ +*\!]*\[\([^ ]*\)] .*/\\1/p" |\
           head -n1 | egnc .
    return $?

# ###### RAF, TODO: code to keep for a while, just in case ############

    if [ "x${1:-}" == "x-e" ]; then
        local opts="--current --topo-order --no-color"
        command git show-branch $opts | sed -ne "s,[ +]*\[HEAD\].*,," \
            -e "s/[ +]*\* *\[\([^ ]*\)] .*/\\1/p" | head -n1 | egnc .
        return $?
    elif [ "x${1:-}" == "x-c" ]; then
        command git branch --show-current --no-color | egnc .
        return $?
    else
        local bn=$(lsbr -c);
        if [ "$(hconv $bn)" == "$(hcur)" ]; then
            echo $bn
        else
            return 1
        fi
    fi
}
export -f bcur

