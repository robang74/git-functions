        local gitcols="hi gitcommitSummary ctermfg=yellow ctermbg=red"
        eval "$git_core_editor() { command $git_core_editor -c '$gitcols'"\
             " \"\$@\"; } ; export -f $git_core_editor"
#       $git_core_editor="$git_core_editor -c '"$gitcols"'"
    fi
}
